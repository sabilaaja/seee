<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/container_android_large"
  android:layout_width="match_parent"
  android:layout_height="800dp"
  android:background="@drawable/container_android_large">

  <TextView
      android:id="@+id/text_greeting"
      android:layout_width="173dp"
      android:layout_height="46dp"
      android:layout_gravity="top|left"
      android:layout_marginLeft="95dp"
      android:layout_marginTop="483dp"
      android:gravity="center_horizontal|top"
      android:includeFontPadding="false"
      android:lineHeight="30dp"
      android:text="Selamat Malam"
      android:textColor="#FFFFFFFF"
      android:textSize="20dp" />
  
  <ImageView
    android:id="@+id/image_screen_capture"
    android:layout_width="187dp"
    android:layout_height="206dp"
    android:layout_marginLeft="0.5dp"
    android:layout_marginTop="248dp"
    android:layout_gravity="top|center_horizontal"
    android:scaleType="centerInside"
    android:src="@drawable/image_screen_capture" />

  <ImageView
      android:id="@+id/image_battery"
      android:layout_width="36dp"
      android:layout_height="13dp"
      android:layout_gravity="top|left"
      android:layout_marginLeft="310dp"
      android:layout_marginTop="10dp"
      android:scaleType="centerInside"
      android:src="@drawable/image_battery" />

  <ImageView
    android:id="@+id/image_wifi"
    android:layout_width="14dp"
    android:layout_height="16dp"
    android:layout_marginLeft="285dp"
    android:layout_marginTop="9dp"
    android:layout_gravity="top|left"
    android:scaleType="centerInside"
    android:src="@drawable/image_wifi" />
  
  <TextView
    android:id="@+id/text_time"
    android:layout_width="wrap_content"
    android:layout_height="16dp"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="8.5dp"
    android:layout_marginBottom="-0.5dp"
    android:layout_gravity="top|left"
    android:gravity="left|center_vertical"
    android:includeFontPadding="false"
    android:maxLines="1"
    android:singleLine="true"
    android:text="20:00"
    android:textColor="#FFFFFFFF"
    android:textSize="12dp" />
</FrameLayout>
